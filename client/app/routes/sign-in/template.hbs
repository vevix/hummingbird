<div class="row">
  <div class="medium-8 medium-offset-2 columns">
    <div class="medium-6 columns">
      <h5 class="text-center">
        {{t "sign-in.header"}}
      </h5>

      {{#if errorMessage}}
        <p class="text-center" style="color: red;" data-test-selector='error-message'>
          {{errorMessage}}
        </p>
      {{/if}}

      <form {{action "auth" on="submit"}}>
        {{! Username input }}
        <label>
          {{t "sign-in.identification"}}
          {{one-way-input
              value=identification
              update=(action (mut identification))
              placeholder="email@example.com"
              data-test-selector="identification"}}
        </label>

        {{! Password input }}
        <label>
          {{t "sign-in.password"}}
          {{one-way-input
              value=password
              update=(action (mut password))
              type="password"
              placeholder="password"
              data-test-selector="password"}}
        </label>

        <button
          type="submit"
          class="expanded button"
          disabled={{if (or (is-empty identification) (is-empty password)) "disabled"}}
          data-test-selector="sign-in">
          {{t "links.auth.sign-in"}}
        </button>
      </form>

      <p class="text-center">
        {{t "sign-in.no-account"}}
        {{link-to (t "links.auth.sign-up") "sign-up"}}
      </p>
    </div>

    <div class="medium-6 columns">
      {{social-connect}}
    </div>
  </div>
</div>
