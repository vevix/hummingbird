<div class="site-header" class="top-bar" data-test-selector="site-header">
  <div class="top-bar-wrapper">
    {{! Left Side }}
    <div class="top-bar-left">
      {{#zf-dropdown-menu}}
        <li>
          {{#link-to 'dashboard'}}
            <div class="logo"></div>
          {{/link-to}}
        </li>
        <li class="primary-nav has-submenu">
          <a>{{t 'header.shows'}}</a>
          <ul class="submenu menu vertical" data-submenu>
            <li>
              {{link-to (t 'media.anime.name') 'anime.index'}}
            </li>
            <li><a href="#">{{t 'media.drama.name'}}</a></li>
          </ul>
        </li>
        <li class="primary-nav"><a href="#">{{t 'media.manga.name'}}</a></li>
        <li class="primary-nav"><a href="https://forums.hummingbird.me">{{t 'header.forums'}}</a></li>
        <li class="primary-nav"><a href="#">{{t 'header.downloads'}}</a></li>
      {{/zf-dropdown-menu}}
    </div>

    {{! Right Side }}
    <div class="top-bar-right">
      {{#if currentSession.isAuthenticated}}
        {{#zf-dropdown-menu}}
          <li>
            <a href="#" class="circle-button">
              {{fa-icon "search"}}
            </a>
          </li>
          <li>
            <a href="#" class="circle-button">
              {{fa-icon "bell-o"}}
            </a>
          </li>
          <li class="has-submenu">
            <a href="#" class="circle-button avatar">
              <img src={{currentSession.account.avatar}}>
            </a>
            <ul class="submenu menu vertical" data-submenu>
              <li>
                {{#link-to 'users.index' currentSession.account}}
                  {{t 'header.user.profile'}}
                {{/link-to}}
              </li>
              <li>
                <a href="#" {{action 'invalidateSession'}}>
                  {{t 'links.auth.logout'}}
                </a>
              </li>
            </ul>
          </li>
        {{/zf-dropdown-menu}}
      {{else}}
        <ul class="menu">
          <li>
            <a href="#" class="circle-button">
              {{fa-icon "search"}}
            </a>
          </li>
          <li>
            {{link-to (t 'links.auth.sign-in') 'sign-in'}}
          </li>
        </ul>
      {{/if}}
    </div>
  </div>
</div>
